# 服务器配置
PORT=5001
NODE_ENV=development

# 数据库配置
# SQLite (本地开发): 留空 DATABASE_URL 将使用本地 SQLite
# PostgreSQL (生产): postgresql://user:password@host:5432/database
DATABASE_URL=

# JWT 密钥 (生产环境请使用强密钥)
JWT_SECRET=your-super-secret-key-change-in-production

# CORS 配置 (多个域名用逗号分隔)
CORS_ORIGIN=http://localhost:3000

# 文件上传配置
UPLOAD_MAX_SIZE=5242880
